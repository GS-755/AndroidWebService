@model AndroidWebService.Models.PhongTro

@{
    ViewBag.Title = "Thêm phòng trọ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col mt-3">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Thêm mới</h2>
            @using (Html.BeginForm("Create", "Motels", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <h4>Phòng trọ</h4>

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mt-3">
                    Tài khoản
                    <div class="mt-2">
                        @Html.DropDownList("TenDangNhap", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Tiêu đề
                    <div class="mt-2">
                        @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Vị trí
                    <div class="mt-2">
                        @Html.DropDownList("MaVT", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaVT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Diện tích
                    <div class="mt-2">
                        @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Giá
                    <div class="mt-2">
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Mô tả
                    <div class="mt-2">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    Trạng thái
                    <div class="mt-2">
                        @Html.DropDownList("MaTT", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaTT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    <label for="UploadImage">Hình ảnh</label>
                    <div class="mt-2">
                        <input type="file" class="form-control" name="UploadImage" accept="image/*" />
                    </div>
                </div>

                <div class="mt-3">
                    <div class="mt-2">
                        @Html.ActionLink("< Quay lại", "Index", null, new { @class = "btn btn-warning text-white" })
                        <input type="submit" value="Thêm mới" class="mx-3 btn btn-primary" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
